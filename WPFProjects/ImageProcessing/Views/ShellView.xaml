<Window
    x:Class="ImageProcessing.Views.ShellView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ImageProcessing.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:ImageProcessing"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:ImageProcessing.ViewModels"
    Title="{Binding Title}"
    d:DataContext="{d:DesignInstance Type=viewmodels:ShellViewModel}"
    Style="{DynamicResource ShellViewStyle}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d" />
